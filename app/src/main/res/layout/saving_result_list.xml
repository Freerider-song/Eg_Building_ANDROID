<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/area_root2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#c0f0f0">

    <TextView
        android:id="@+id/tv_saving_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/eg_cyan_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_instrument_usage"
        app:layout_constraintTop_toBottomOf="@+id/tv_instrument"
        app:layout_constraintVertical_bias="0.5"
        tools:text="절감 기준   162.5" />

    <TextView
        android:id="@+id/tv_saving_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/eg_cyan_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_instrument"
        app:layout_constraintTop_toBottomOf="@+id/tv_instrument"
        tools:text="절감 목표   146.2" />

    <TextView
        android:id="@+id/tv_instrument"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/ks_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="냉온방 공조기" />

    <TextView
        android:id="@+id/tv_instrument_usage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/eg_cyan_dark"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="사용량   126.4" />

</androidx.constraintlayout.widget.ConstraintLayout>