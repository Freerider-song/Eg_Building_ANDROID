<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/area_root2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_corner_pastel_yellow_filled">

    <TextView
        android:id="@+id/tv_saving_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center_horizontal"
        android:text="절감 기준  162.5"
        android:textColor="@color/ks_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_instrument_usage"
        app:layout_constraintTop_toBottomOf="@+id/tv_instrument"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/tv_saving_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center_horizontal"
        android:text="절감 목표  146.2"
        android:textColor="@color/ks_gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_instrument"
        app:layout_constraintTop_toBottomOf="@+id/tv_instrument" />

    <TextView
        android:id="@+id/tv_instrument"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_regular"
        android:singleLine="true"
        android:text="냉온방 공조기"
        android:textColor="@color/ks_gray"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_instrument_usage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:ellipsize="end"
        android:fontFamily="@font/opensans_regular"
        android:singleLine="true"
        android:text="사용량   126.4"
        android:textColor="@color/ks_gray"
        android:textSize="17sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>